<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_vi"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/carted_product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/micky"
            android:background="@color/white"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/carted_product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>


<LinearLayout
    android:id="@+id/lay1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toEndOf="@+id/card_vi"
    android:layout_alignParentTop="true"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="50dp">


    <TextView
        android:id="@+id/carted_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#111212"
        android:textSize="18sp"
        android:text="Name" />

    <TextView
        android:id="@+id/carted_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#1031E6"
        android:textSize="16sp"
        android:text="Price" />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/cart_bt_decrease"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_remove_24"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/carted_product_count_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="20dp"
            android:text="0"/>


        <ImageButton
            android:id="@+id/cart_bt_increase"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_add_24"
            android:background="@android:color/transparent"/>

    </LinearLayout>


